<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_marginStart="@dimen/margin_regular"
    android:layout_marginEnd="@dimen/margin_regular"
    android:maxHeight="@dimen/movie_item_height"
    android:backgroundTint="@color/bg_movie_list_element"
    app:contentPadding="@dimen/padding_fragment_regular"
    app:cardCornerRadius="@dimen/border_radius"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/movie_image"
            android:layout_width="@dimen/recycler_view_image_size"
            android:layout_height="@dimen/recycler_view_image_size"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/movie_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_regular"

            android:text="USA"

            style="@style/TextAppearance.MaterialComponents.Overline"
            app:layout_constraintStart_toEndOf="@+id/movie_image"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/movie_year"
            style="@style/TextAppearance.MaterialComponents.Overline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_small"

            android:text="1994"

            app:layout_constraintTop_toTopOf="@+id/movie_country"
            app:layout_constraintBottom_toBottomOf="@+id/movie_country"
            app:layout_constraintStart_toEndOf="@+id/movie_country" />

        <TextView
            android:id="@+id/movie_duration"
            style="@style/TextAppearance.MaterialComponents.Overline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textAllCaps="false"
            android:layout_marginStart="@dimen/margin_small"
            android:text="178 min"

            app:layout_constraintTop_toTopOf="@+id/movie_year"
            app:layout_constraintBottom_toBottomOf="@+id/movie_year"
            app:layout_constraintStart_toEndOf="@+id/movie_year"/>

        <TextView
            android:id="@+id/movie_title"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_regular"
            android:layout_weight="1"

            android:text="Pulp fiction"

            app:layout_constraintEnd_toStartOf="@+id/movie_fav_toggle"
            app:layout_constraintHorizontal_bias="0.059"
            app:layout_constraintStart_toEndOf="@+id/movie_image"
            app:layout_constraintTop_toBottomOf="@+id/movie_year" />


        <CheckBox
            android:id="@+id/movie_fav_toggle"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_regular"
            android:button="@drawable/heart_border_24"
            android:buttonTint="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/movie_director"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="Quentin Tarantino"
            android:layout_marginStart="@dimen/margin_regular"
            android:layout_marginBottom="0dp"

            app:layout_constraintStart_toEndOf="@+id/movie_image"
            app:layout_constraintTop_toBottomOf="@+id/movie_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>