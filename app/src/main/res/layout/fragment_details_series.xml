<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            style="@style/Widget.MaterialComponents.Toolbar.PrimarySurface" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="@color/bg_movies">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_regular"
                android:indeterminate="true"
                app:layout_constraintBottom_toBottomOf="@+id/details_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.16000003" />

            <TextView
                android:id="@+id/message"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error_getting_data"
                android:textAlignment="center"
                android:visibility="gone"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.25" />

            <ScrollView
                android:id="@+id/details_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:elevation="100dp"

                    android:orientation="vertical"
                    android:padding="@dimen/padding_fragment_regular">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/poster"
                            android:layout_width="@dimen/details_image_width"
                            android:layout_height="@dimen/details_image_height"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/title"
                            style="@style/TextAppearance.MaterialComponents.Headline4"
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_regular"
                            android:layout_marginEnd="@dimen/margin_regular"

                            android:ellipsize="end"
                            android:maxLines="3"

                            app:layout_constraintEnd_toStartOf="@+id/favourite_toggle"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/poster"
                            app:layout_constraintTop_toTopOf="parent" />

                        <CheckBox
                            android:id="@+id/favourite_toggle"
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"

                            android:button="@drawable/heart_border_24"

                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_marginStart="@dimen/margin_regular"

                            app:layout_constraintStart_toEndOf="@+id/poster"
                            app:layout_constraintTop_toBottomOf="@+id/title" />

                        <TextView
                            android:id="@+id/year"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="@dimen/margin_regular"

                            app:layout_constraintBottom_toBottomOf="@+id/icon"
                            app:layout_constraintStart_toEndOf="@+id/icon"
                            app:layout_constraintTop_toBottomOf="@+id/title" />

                        <TextView
                            android:id="@+id/seasons"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="@dimen/margin_regular"

                            app:layout_constraintBottom_toBottomOf="@+id/year"
                            app:layout_constraintStart_toEndOf="@+id/year"
                            app:layout_constraintTop_toTopOf="@+id/year" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/label_writer"
                        style="@style/TextAppearance.MaterialComponents.Subtitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/margin_regular"
                        android:text="@string/label_writer" />

                    <TextView
                        android:id="@+id/writer"
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/label_genre"
                        style="@style/TextAppearance.MaterialComponents.Subtitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/margin_regular"
                        android:text="@string/label_genre" />

                    <TextView
                        android:id="@+id/genre"
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/label_plot"
                        style="@style/TextAppearance.MaterialComponents.Subtitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/margin_regular"
                        android:text="@string/label_plot" />

                    <TextView
                        android:id="@+id/plot"
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content" />
                </LinearLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
